<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="stackPaneID" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.observer.PrimaryController">
   <children>
      <ImageView fx:id="imageViewID" fitHeight="523.0" fitWidth="661.0" pickOnBounds="true" preserveRatio="true" />
      <VBox fx:id="vbox" alignment="CENTER" prefHeight="517.0" prefWidth="657.0" spacing="20.0">
         <children>
            <Label text="CHOOSE A COLOR" textAlignment="CENTER">
               <font>
                  <Font name="Ink Free" size="60.0" />
               </font>
               <effect>
                  <Blend />
               </effect>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button fx:id="yellowButton" onAction="#changeToYellow" text="YELLOW">
                     <font>
                        <Font name="Ink Free" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="blueButton" layoutX="269.0" layoutY="41.0" onAction="#changeToBlue" text="BLUE">
                     <font>
                        <Font name="Ink Free" size="16.0" />
                     </font>
                  </Button>
                  <Button fx:id="redButton" layoutX="334.0" layoutY="41.0" onAction="#changeToRed" text="RED">
                     <font>
                        <Font name="Ink Free" size="16.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
